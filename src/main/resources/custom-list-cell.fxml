<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" spacing="10">

    <ImageView fx:id="patientImage" fitHeight="50" fitWidth="50"/>
    <Label fx:id="patientName" text="Patient Name">
        Patient Name
    </Label>
    <Button fx:id="detailsButton" text="Details" onAction="#showDetails"/>
</HBox>
